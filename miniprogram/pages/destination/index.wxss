/* pages/destination/index.wxss */
.active {
  /* border-left: 2px solid #c75984; */
  /* display: block; */
  opacity: 1 !important;

}

.boxtop {
  text-align: center;
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 88rpx;
  color: #333;
  letter-spacing: 0.02133rem;
  position: fixed;
  top: 0;
  background: #FFFFFF;
  z-index: 10;
  -webkit-box-shadow: inset 0 -0.02667rem 0 0 rgba(240, 240, 240, 0.5);
  box-shadow: inset 0 -0.02667rem 0 0 rgba(240, 240, 240, 0.5);
}

.box {
  display: flex;
  margin-top: 44px;
}

.boxleft {
  /* padding-left: 4px; */
  width: 206rpx;
  text-align: center;
  text-align: center;
  line-height: 96rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #333333;
  border: none;
  overflow-y: auto;
  height: calc(100vh - 44px);

}

.boxleft>view {
  position: relative;
}

.boxleft>view>view {
  position: absolute;
  width: 3px;
  display: block;
  height: 24px;
  background: #c75984;
  top: 11px;
  left: 0;
  opacity: 0;
  /* display: none; */
}

.boxright {
  box-sizing: border-box;
  padding: 20Px;
  height: 100%;
  overflow-y: auto;
  width: calc(100% - 206rpx);
  padding-bottom: 0.53333rem;
}

.boxright_top {
  /* height:328rpx ; */
  /* height:174rpx ; */
  overflow-y: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  overflow: hidden;
}

.atlas {
  width: 47%;
  margin-top: 20rpx;
  height: 144rpx;
  position: relative;
}

.atlas>view {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  width: 86%;
  height: 77%;
  border: 4rpx solid rgba(255, 255, 255, 0.7);
  border-radius: 2Px;
  text-align: center;
  /* padding-top: 22rpx; */
}

.atlas>view>text {
  color: #FFFFFF;
  display: block;

}

.atlas>view>text:nth-of-type(1) {
  margin-top: 20rpx;
}

.atlas>image {
  width: 220rpx;
  height: 144rpx;
}

.more1 {
  display: flex;
  margin-top: 16rpx;
  color: #da428c;
}

.more1>text {
  width: 100%;
  text-align: center;

}